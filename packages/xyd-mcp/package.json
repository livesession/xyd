{
  "name": "@xyd-js/mcp",
  "version": "0.1.0-build.1",
  "description": "Model Context Protocol (MCP) server implementation for xyd",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun build index.ts client.ts --outdir dist --target node",
    "dev": "bun --watch index.ts",
    "start": "bun index.ts",
    "client": "bun client.ts",
    "example": "bun example.ts",
    "mcp:inspector": "npx @modelcontextprotocol/inspector http://localhost:3000/mcp"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "@prettier/sync": "^0.6.1",
    "@xyd-js/atlas": "workspace:*",
    "@xyd-js/components": "workspace:*",
    "@xyd-js/core": "workspace:*",
    "@xyd-js/framework": "workspace:*",
    "@xyd-js/gql": "workspace:*",
    "@xyd-js/openapi": "workspace:*",
    "@xyd-js/plugins": "workspace:*",
    "@xyd-js/uniform": "workspace:*",
    "curlconverter": "^4.12.0",
    "express": "^5.1.0",
    "openux-js": "^0.0.0-pre.0",
    "prettier": "^3.6.2",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-stringify": "^11.0.0",
    "turndown": "^7.2.1",
    "turndown-plugin-gfm": "^1.0.2",
    "unist-builder": "^4.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/turndown": "^5.0.5",
    "typescript": "^5.6.2"
  }
}
