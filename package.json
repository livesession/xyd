{
  "name": "@xyd-js/project",
  "engines": {
    "pnpm": ">=9",
    "node": ">=22.12.0"
  },
  "packageManager": "pnpm@9.10.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm lerna watch -- lerna run build",
    "dev:styles": "pnpm --filter \"@xyd-js/components\" --filter \"@xyd-js/ui\" --parallel dev",
    "build": "pnpm run --filter=\"./packages/**/*\" build",
    "build:storybook": "pnpm run build && pnpm run --filter=\"./packages/**/*\" build:storybook",
    "build:apidocs-demo": "pnpm --filter \"./packages/**/*\" --filter \"@xyd-js/apidocs-demo\" build",
    "schema:docs.json": "cd ./packages/xyd-core && npx ts-json-schema-generator --path ./src/types/settings.ts --type 'Settings' --no-top-ref --out ../../apps/docs/public/docs.json",
    "clean": "./clear.sh",
    "prepare": "husky",
    "pretest:unit": "pnpm build",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:local": "npm_config_registry=http://localhost:4873 playwright test",
    "test:node-support": "playwright test --config=playwright.node-support.config.ts",
    "test:node-support:local": "npm_config_registry=http://localhost:4873 playwright test --config=playwright.node-support.config.ts",
    "test:e2e:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@changesets/cli": "^2.28.1",
    "@playwright/test": "^1.53.1",
    "@types/node": "20.9.0",
    "@types/react": "^19.1.0",
    "husky": "^9.1.6",
    "lerna": "^8.1.9",
    "lint-staged": "^15.2.10",
    "nx": "^20.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.{js,ts,cjs,mjs,md,json,jsonc}": "biome ci --no-errors-on-unmatched"
  }
}
